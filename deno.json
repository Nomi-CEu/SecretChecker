{
  "tasks": {
    "check": "deno lint && deno fmt --check",
    "build": "deno bundle ./src/main.ts -o ./dist/index.js"
  },
  "imports": {
    "@actions/core": "npm:@actions/core@^1.11.1",
    "@std/assert": "jsr:@std/assert@1",
    "@zod/zod": "jsr:@zod/zod@^4.1.13"
  },
  "fmt": {
    "include": ["src/"],
    "spaceAround": false,
    "indentWidth": 2
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "eqeqeq",
        "camelcase",
        "default-param-last",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-external-import",
        "no-import-prefix",
        "no-inferrable-types",
        "no-sparse-arrays",
        "no-undef"
      ]
    }
  }
}
